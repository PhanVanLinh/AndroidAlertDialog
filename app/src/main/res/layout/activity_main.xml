<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_show_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert" />

    <Button
        android:id="@+id/button_show_alert_with_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert with EditText" />

    <Button
        android:id="@+id/button_show_alert_with_text_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert with TextInputLayout"
        />

</LinearLayout>